<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JacksActivity">

    <Button
        android:id="@+id/answerTopLeftButton"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="388dp"
        android:gravity="center"
        android:text="Answer 1"
        app:layout_constraintEnd_toStartOf="@+id/answerTopRightButton"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/answerTopRightButton"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginTop="388dp"
        android:layout_marginEnd="36dp"
        android:gravity="center"
        android:text="Answer 2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/answerBottomLeftButton"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="51dp"
        android:layout_marginBottom="92dp"
        android:gravity="center"
        android:text="Answer 3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/answerBottomRightButton"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/answerTopLeftButton"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/answerBottomRightButton"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="92dp"
        android:gravity="center"
        android:text="Answer 4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.942"
        app:layout_constraintStart_toEndOf="@+id/answerTopLeftButton"
        app:layout_constraintTop_toBottomOf="@+id/answerTopRightButton"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/questionTextView"
        android:layout_width="335dp"
        android:layout_height="146dp"
        android:layout_marginTop="76dp"
        android:gravity="center"
        android:text="Question"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scoreTextView" />

    <TextView
        android:id="@+id/scoreTextView"
        android:layout_width="227dp"
        android:layout_height="36dp"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:text="Score"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>